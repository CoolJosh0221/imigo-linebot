# Bot Configuration
# Choose default language: id (Indonesian), zh (Chinese), en (English), fil (Filipino), vi (Vietnamese), th (Thai)
DEFAULT_LANGUAGE=id

# ngrok Configuration
# Get your authtoken from https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# LINE Messaging API Credentials
# Get these from https://developers.line.biz/console/
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# LLM Configuration
# For local vLLM server (recommended for SEA-LION-7B)
LLM_BASE_URL=http://localhost:8001/v1
# Or for Docker: LLM_BASE_URL=http://llm:8001/v1

# Model name (SEA-LION-7B or alternative)
MODEL_NAME=aisingapore/sealion7b-instruct

# For OpenAI API (alternative to local LLM)
# LLM_API_KEY=sk-your-openai-api-key-here
# Leave LLM_BASE_URL empty to use OpenAI

# Database Configuration
# For SQLite (development/small scale)
DATABASE_URL=sqlite+aiosqlite:///database.db

# For PostgreSQL (production/larger scale)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/migrant_workers

# Optional: Google Maps API Key (for location services)
GOOGLE_MAPS_API_KEY=

# Optional: Logging Level
# LOG_LEVEL=INFO
